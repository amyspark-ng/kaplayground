---
type Props = {
    title: string;
    mode?: "playground" | "editor";
};

const { title, mode } = Astro.props;

import "tippy.js/dist/tippy.css";
import "flex-splitter-directive/styles.min.css";
import { $isEditor, $isPlayground } from "../stores/playground";

$isPlayground.set(mode === "playground");
$isEditor.set(mode === "editor");
---

<!DOCTYPE html>
<html lang="en" data-mode={mode}>
    <head>
        <script is:inline>
            if (localStorage.getItem("theme") === null) {
                document.documentElement.setAttribute("data-theme", "light");
            } else {
                document.documentElement.setAttribute(
                    "data-theme",
                    localStorage.getItem("theme"),
                );
            }
        </script>
        <script>
            import { themeChange } from "theme-change";
            import "flex-splitter-directive";
            themeChange();
        </script>
        <script
            src="https://unpkg.com/split-me@1.3.0/dist/split-me/split-me.esm.js"
        ></script>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="KAPLAYGROUND is an editor for KAPLAY game library"
        />
        <meta
            name="keywords"
            content="KAPLAY, KAPLAYGROUND, KAPLAYGROUND editor, KAPLAYGROUND game editor, KAPLAYGROUND game library"
        />
        <meta name="author" content="KAPLAYGROUND" />
        <meta name="theme-color" content="#f5f5f5" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" href="/dino.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
        <script src="./setMode.ts"></script>
    </body>
</html>

<style is:global>
html, body {
	height: 100vh;
	margin: 0;
	padding: 0;
    overflow: hidden;
    scrollbar-width: none;
}

.gutter {
    background-color: var(--fallback-n ,oklch(var(--n)/var(--tw-bg-opacity)));
}
</style>

<script src="./setMode.ts"></script>

<script>
    import "../components/UI/tooltip";
</script>
